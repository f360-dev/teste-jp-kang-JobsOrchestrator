{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/jobsorchestrator-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "ConnectionString": "mongodb://host.docker.internal:27017/?replicaSet=rs0&directConnection=true",
    "DatabaseName": "jobsdb",
    "JobsCollection": "jobs",
    "OutboxCollection": "outbox",
    "DeadLetterCollection": "deadletters"
  },
  "RabbitMq": {
    "Host": "host.docker.internal",
    "Username": "guest",
    "Password": "guest",
    "Exchange": "jobs-exchange"
  },
  "ApiKeys": {
    "Default": "dev-key-please-change"
  },
  "Jwt": {
    "Key": "your-256-bit-secret-key-here-minimum-32-chars!!",
    "Issuer": "JobsOrchestrator",
    "Audience": "JobsOrchestratorAPI"
  }
}
